    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"securePassword123\",\n  \"role\": \"USER\"\n}"
            },
            "url": "{{baseUrl}}{{apiPrefix}}/auth/register"
          }
        },
        {
          "name": "Login (email)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"securePassword123\"\n}"
            },
            "url": "{{baseUrl}}{{apiPrefix}}/auth/login/email"
          }
        },
        {
          "name": "Login (phone)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"phone\": \"+919876543210\",\n  \"otp\": \"123456\"\n}" },
            "url": "{{baseUrl}}{{apiPrefix}}/auth/login/phone"
          }
        },
        {
          "name": "Send OTP",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"john@example.com\",\n  \"purpose\": \"login\"\n}" },
            "url": "{{baseUrl}}{{apiPrefix}}/auth/send-otp"
          }
        },
        {
          "name": "Refresh token",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}" },
            "url": "{{baseUrl}}{{apiPrefix}}/auth/refresh"
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}" },
            "url": "{{baseUrl}}{{apiPrefix}}/auth/logout"
          }
        },
        {
          "name": "Forgot password",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"john@example.com\"\n}" },
            "url": "{{baseUrl}}{{apiPrefix}}/auth/forgot-password"
          }
        },
        {
          "name": "Reset password",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"token\": \"RESET_TOKEN\",\n  \"newPassword\": \"newSecurePassword123\"\n}" },
            "url": "{{baseUrl}}{{apiPrefix}}/auth/reset-password"
          }
        },
        {
          "name": "Logout all",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{accessToken}}" }],
            "url": "{{baseUrl}}{{apiPrefix}}/auth/logout-all"
          }
        }
