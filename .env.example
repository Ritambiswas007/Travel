# Server Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# Database (PostgreSQL)
# Example: postgresql://user:password@localhost:5432/dbname?schema=public&sslmode=require
DATABASE_URL=postgresql://user:password@localhost:5432/travel_pilgrimage?schema=public&sslmode=require

# JWT Authentication
# Generate strong secrets: openssl rand -base64 32
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Redis (Optional - for caching)
# REDIS_URL=redis://localhost:6379
# REDIS_CACHE_TTL_SECONDS=300

# Supabase Storage (for document uploads) - get keys from Dashboard → Project Settings → API
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-from-dashboard
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-from-dashboard
SUPABASE_BUCKET=documents

# Firebase (Optional - for push notifications)
# FIREBASE_ENABLED=false
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_CLIENT_EMAIL=your-client-email@your-project.iam.gserviceaccount.com
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# Payment Gateway - Razorpay (Optional)
# PAYMENT_PROVIDER=razorpay
# RAZORPAY_KEY_ID=your-key-id
# RAZORPAY_KEY_SECRET=your-key-secret
# PAYMENT_WEBHOOK_SECRET=your-webhook-secret

# Payment Gateway - Cashfree (Alternative)
# PAYMENT_PROVIDER=cashfree
# CASHFREE_APP_ID=your-app-id
# CASHFREE_SECRET=your-secret

# Facebook Leads (Optional)
# FACEBOOK_LEADS_ENABLED=false
# FACEBOOK_VERIFY_TOKEN=your-verify-token
# FACEBOOK_PAGE_ACCESS_TOKEN=your-page-access-token

# PDF Service (Optional)
# PDF_SERVICE_ENABLED=false
# PDF_SERVICE_URL=https://your-pdf-service.com

# AI Bot (Optional)
# AI_BOT_ENABLED=false
# AI_RECOMMENDATION_HOOK=https://your-ai-service.com/recommendations
# AI_FAQ_HOOK=https://your-ai-service.com/faq
# AI_BOOKING_ASSISTANT_HOOK=https://your-ai-service.com/assistant

# Notifications (Optional)
# EMAIL_NOTIFICATIONS_ENABLED=false
# SMS_NOTIFICATIONS_ENABLED=false
# PUSH_NOTIFICATIONS_ENABLED=false
